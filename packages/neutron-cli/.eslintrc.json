{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "class-methods-use-this": "off",
    "max-classes-per-file": "off",
    "import/no-self-import": "off",
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "object-curly-newline": "off",
    "max-len": "off"
  }
}
