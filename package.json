{
  "name": "@neutron.js/cli",
  "description": "This CLI was developed to help developers create new projects quickly and easily",
  "version": "2.0.1",
  "main": "build/cli.js",
  "license": "MIT",
  "bin": {
    "neutron": "bin/neutron"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json}",
    "lint": "tslint -p .",
    "compile": "tsc -p .",
    "templatescopy": "rm -rf build/templates && yes | cp -rf src/templates build/templates",
    "build": "yarn format && yarn lint && yarn compile && yarn templatescopy"
  },
  "author": {
    "name": "Thiago de Souza",
    "email": "email@thiagodesouza.com.br",
    "url": "https://github.com/thiagodesouza"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neutronjs/neutron-cli"
  },
  "keywords": [
    "neutron",
    "expo",
    "react",
    "react-native",
    "node",
    "typescript",
    "gluegun"
  ],
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "bin"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "exec-sh": "^0.3.2",
    "gluegun": "^3.3.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "husky": "^3.0.4",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1"
  }
}
